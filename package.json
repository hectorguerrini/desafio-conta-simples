{
  "name": "desafio-conta-simples",
  "version": "1.0.0",
  "description": "Desafio de backend da empresa Conta Simples",
  "main": "server.js",
  "scripts": {
    "test": "jest --no-cache --detectOpenHandles",
    "tsc": "tsc",
    "dev": "ts-node-dev --transpile-only --respawn -- src/server.ts",
    "prod": "tsc && node ./dist/index.js"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "author": "Hector Guerrini Herrera",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "helmet": "^4.1.1",
    "jest": "^26.5.3",
    "jsonwebtoken": "^8.5.1",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/graphql": "^14.5.0",
    "@types/helmet": "0.0.48",
    "@types/jest": "^26.0.14",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/supertest": "^2.0.10",
    "ts-node-dev": "^1.0.0-pre.65",
    "typescript": "^4.0.3"
  }
}
